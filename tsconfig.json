{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2015", "es2017"],
    "types": ["jest", "node"],
    "baseUrl": "./",
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}